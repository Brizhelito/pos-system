# =========================================
# Configuración de Base de Datos
# =========================================
# URL de conexión a PostgreSQL (Ejemplo - Reemplazar con tu URL real)
DATABASE_URL=postgresql://user_ejemplo:password_ejemplo@host.ejemplo.com:5432/nombre_bd_ejemplo?sslmode=require

# =========================================
# Configuración de Autenticación
# =========================================
# Contraseña para encriptar cookies (Mínimo 32 caracteres - Generar una única y segura)
SECRET_COOKIE_PASSWORD="esta-es-una-contraseña-ejemplo-segura-y-larga"

# Valor secreto adicional para reforzar el hashing de contraseñas (Generar uno único)
BCRYPT_PEPPER="valor-secreto-ejemplo-para-pepper"

# Duración de las sesiones en días
SESSION_DURATION_DAYS=14

# =========================================
# Información de la Empresa
# =========================================
COMPANY_NAME="Panadería Del Sol"
COMPANY_ADDRESS="Calle Ficticia 456"
COMPANY_CITY="Ciudad Ejemplo, Estado Ficticio"
COMPANY_ZIP="67890"
COMPANY_PHONE="+58 212-987-6543"
COMPANY_EMAIL="info@panaderiadelsol.com"
COMPANY_RIF="J-98765432-1"
COMPANY_WEBSITE="www.panaderiadelsol.com"
COMPANY_LOGO_URL="/images/logo_delsol.png"

# =========================================
# Configuración de Impuestos
# =========================================
# Tasa de impuesto (como decimal, ej: 0.16 para 16%)
TAX_RATE=0.16
# Etiqueta para mostrar en facturas y recibos
TAX_LABEL="IVA"
# Habilitar o deshabilitar cálculo de impuestos
TAX_ENABLED=true

# =========================================
# Configuración de Moneda
# =========================================
# Código de moneda según ISO 4217
CURRENCY_CODE="VES"
# Símbolo de la moneda
CURRENCY_SYMBOL="Bs."
# Configuración regional para formateo
CURRENCY_LOCALE="es-VE"

# =========================================
# Configuración de Facturación
# =========================================
# Prefijo para números de factura
INVOICE_PREFIX="PDLS-FAC-"

# =========================================
# Configuración General de la Aplicación
# =========================================
# Nombre de la aplicación
APP_NAME="Sistema POS Panadería Del Sol"
# Método de pago predeterminado
DEFAULT_PAYMENT_METHOD="PUNTO_DE_VENTA"
# Límite predeterminado para paginación
DEFAULT_PAGINATION_LIMIT=50
